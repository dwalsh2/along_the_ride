<!-- Validation failure messages -->
<% if @route.errors.any? %>
  <% @route.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Route</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_route" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for starting_latitude -->
      <div class="form-group">
        <label for="starting_latitude" class="control-label">
          Starting latitude
        </label>

        <input type="text" id="starting_latitude" name="starting_latitude" placeholder="Starting latitude" class="form-control" value="<%= @route.starting_latitude %>">
      </div>

      <!-- Label and input for starting_longitude -->
      <div class="form-group">
        <label for="starting_longitude" class="control-label">
          Starting longitude
        </label>

        <input type="text" id="starting_longitude" name="starting_longitude" placeholder="Starting longitude" class="form-control" value="<%= @route.starting_longitude %>">
      </div>

      <!-- Label and input for ending_latitude -->
      <div class="form-group">
        <label for="ending_latitude" class="control-label">
          Ending latitude
        </label>

        <input type="text" id="ending_latitude" name="ending_latitude" placeholder="Ending latitude" class="form-control" value="<%= @route.ending_latitude %>">
      </div>

      <!-- Label and input for ending_longitude -->
      <div class="form-group">
        <label for="ending_longitude" class="control-label">
          Ending longitude
        </label>

        <input type="text" id="ending_longitude" name="ending_longitude" placeholder="Ending longitude" class="form-control" value="<%= @route.ending_longitude %>">
      </div>

      <button class="btn btn-success">
        Create Route
      </button>
      or
      <a href="/routes">Cancel</a>
    </form>
  </div>
</div>
