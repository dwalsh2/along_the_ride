<div class="page-header">
  <h3>Waypoint #<%= @waypoint.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Business</dt>
      <dd><%= @waypoint.business_id %></dd>

      <dt>Latitude</dt>
      <dd><%= @waypoint.latitude %></dd>

      <dt>Longitude</dt>
      <dd><%= @waypoint.longitude %></dd>

      <dt>Route</dt>
      <dd>
        <% if @waypoint.route.present? %>
          <a href="/routes/<%= @waypoint.route_id %>">
            <%= @waypoint.route.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/waypoints" class="btn btn-primary">
        Back
      </a>
      <a href="/waypoints/<%= @waypoint.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_waypoint/<%= @waypoint.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Waypoint has many businesses -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Businesses
      </li>

      <% @waypoint.businesses.each do |business| %>
        <li class="list-group-item">
          <a href="/businesses/<%= business.id %>">
            <%= business.created_at %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/businesses/<%= business.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/businesses/<%= business.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_business/<%= business.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_business" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for waypoint_id -->
      <input type="hidden" name="waypoint_id" value="<%= @waypoint.id %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
      </div>

      <!-- Label and input for image_url -->
      <div class="form-group">
        <label for="image_url" class="control-label">
          Image url
        </label>

        <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="">
      </div>

      <!-- Label and input for url -->
      <div class="form-group">
        <label for="url" class="control-label">
          Url
        </label>

        <input type="text" id="url" name="url" placeholder="Url" class="form-control" value="">
      </div>

      <!-- Label and input for phone -->
      <div class="form-group">
        <label for="phone" class="control-label">
          Phone
        </label>

        <input type="text" id="phone" name="phone" placeholder="Phone" class="form-control" value="">
      </div>

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="control-label">
          Rating
        </label>

        <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="">
      </div>

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="">
      </div>

      <!-- Label and input for yelp_api_return -->
      <div class="form-group">
        <label for="yelp_api_return" class="control-label">
          Yelp api return
        </label>

        <input type="text" id="yelp_api_return" name="yelp_api_return" placeholder="Yelp api return" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Business
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
